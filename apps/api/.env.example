# PostgreSQL (Neon/Supabase/Render Postgres)
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=news

# Optional read replica (use same as primary if none)
READ_POSTGRES_HOST=your-postgres-host
READ_POSTGRES_PORT=5432

# Redis (Upstash)
# Prefer single URL: rediss://:password@host:port
REDIS_URL=rediss://:password@host:port
# Or legacy host/port (if not using REDIS_URL)
REDIS_HOST=redis-host
REDIS_PORT=6379

# Service port
PORT=3000

# Optional Kafka broker (omit to disable worker pipeline)
KAFKA_BROKER=

# Optional snapshot fetch base (omit in cloud)
SNAPSHOT_FETCH_BASE=
